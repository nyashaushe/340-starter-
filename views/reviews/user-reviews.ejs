<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<%- messages() %>

<!-- Debug information -->
<% if (typeof reviews !== 'undefined') { %>
  <p>Number of reviews: <%= reviews.length %></p>
<% } %>

<div class="reviews-list">
  <% if (reviews && reviews.length > 0) { %>
    <% reviews.forEach(review => { %>
      <div class="review-item">
        <div class="review-header">
          <h3><%= review.inv_year %> <%= review.inv_make %> <%= review.inv_model %></h3>
          <span class="review-rating">
            <% for(let i = 0; i < review.rating; i++) { %>‚≠ê<% } %>
          </span>
          <span class="review-date">
            <%= new Date(review.review_date).toLocaleDateString() %>
          </span>
        </div>
        <p class="review-text"><%= review.review_text %></p>
        <div class="review-actions">
          <a href="/reviews/edit/<%= review.review_id %>" class="btn-edit">Edit</a>
          <a href="/reviews/delete/<%= review.review_id %>" 
             class="btn-delete"
             onclick="return confirm('Are you sure you want to delete this review?')">
            Delete
          </a>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <p>You haven't written any reviews yet.</p>
  <% } %>
</div> 