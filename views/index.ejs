<h1 class="sr-only">Welcome to CSE Motors!</h1>
<%- messages() %>
<section class="hero" aria-labelledby="hero-heading">
    <div class="hero-content">
        <h2 id="hero-heading">DMC Delorean</h2>
        <ul aria-label="Vehicle features">
            <li>3 Cup holders</li>
            <li>Superman doors</li>
            <li>Fuzzy dice!</li>
        </ul>
        <button class="cta-button" aria-label="Purchase DeLorean">Own Today</button>
    </div>
</section>

<div class="vehicle-grid">
    <section class="upgrades">
        <h2>Delorean Upgrades</h2>
        <div class="grid-container">
            <div class="upgrade-item">
                <img src="/images/upgrades/flux-cap.png" alt="Flux Capacitor">
                <a href="#">Flux Capacitor</a>
            </div>
            <div class="upgrade-item">
                <img src="/images/upgrades/flame.jpg" alt="Flame Decals">
                <a href="#">Flame Decals</a>
            </div>
            <div class="upgrade-item">
                <img src="/images/upgrades/bumper_sticker.jpg" alt="Bumper Sticker">
                <a href="#">Mr. Fusion</a>
            </div>
            <div class="upgrade-item">
                <img src="/images/upgrades/hub-cap.jpg" alt="Hover Conversion">
                <a href="#">Hover Conversion</a>
            </div>
        </div>
    </section>

    <section class="reviews">
        <h2>Latest Vehicle Reviews</h2>
        <% if (reviews && reviews.length > 0) { %>
            <% reviews.forEach(review => { %>
                <div class="review-item">
                    <h3><%= review.inv_year %> <%= review.inv_make %> <%= review.inv_model %></h3>
                    <div class="review-rating">
                        <% for(let i = 0; i < review.rating; i++) { %>‚≠ê<% } %>
                    </div>
                    <p class="review-text"><%= review.review_text %></p>
                    <p class="review-author">- <%= review.account_firstname %> <%= review.account_lastname %></p>
                    <p class="review-date"><%= new Date(review.review_date).toLocaleDateString() %></p>
                </div>
            <% }) %>
        <% } else { %>
            <p>No reviews available yet. Be the first to review a vehicle!</p>
        <% } %>
    </section>
</div>
